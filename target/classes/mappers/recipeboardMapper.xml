<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.itwillbs.mappers.recipeboardMapper">
	
	<insert id="writeBoard">
		insert into recipe_board(id,member_id,subject,img,ingredient,content,readcount,like,date) 
		values(#{id},#{member_id},#{subject},#{img},#{ingredient},#{content},#{readcount},#{like},#{date})
	</insert>
	
	<select id="getMaxId" resultType="java.lang.Integer">
		select max(id) from recipe_board
	</select>
	
	<select id="getBoardList" resultType="com.itwillbs.domain.RecipeBoardDTO">
		select * from recipe_board order by id desc limit #{startRow},#{pageSize}
	</select>
	
	<select id="getBoardCount" resultType="java.lang.Integer">
		select count(*) from recipe_board
	</select>
	
	<select id="getBoard" resultType="com.itwillbs.domain.RecipeBoardDTO">
		select * from recipe_board where member_id=#{member_id}
	</select>
	
	<update id="updateReadcount">
		update recipe_board set readcount=readcount+1 where member_id=#{member_id}
	</update>
	
	<update id="updateBoard">
		update recipe_board set subject=#{subject}, content=#{content} where member_id=#{member_id}
	</update>
	
	<delete id="deleteBoard">
		delete from recipe_board where id=#{id}
	</delete>
	
<!-- 	검색 -->
	<select id="getBoardListSearch" resultType="com.itwillbs.domain.RecipeBoardDTO">
		select * from recipe_board where subject like #{search} order by id desc limit #{startRow},#{pageSize}
	</select>
	
	<select id="getBoardCountSearch" resultType="com.itwillbs.domain.RecipeBoardDTO">
		select count(*) from recipe_board where subject like #{search}
	</select>
	
</mapper>